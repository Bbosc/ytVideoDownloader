{
  "name": "Youtube downloader",
  "version": "2.0",
  "description": "Save current youtube url",
  "permissions": ["scripting", "storage", "tabs","webNavigation","activeTab"],
  "host_permissions": ["https://*.youtube.com/*","https://myfreemp3juices.cc/"],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable":{
    "matches" : [
      "https://*.youtube.com/*",
      "https://myfreemp3juices.cc/*",
      "https://notube.io/*"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*","https://myfreemp3juices.cc/*"],
      "js": ["contentScript.js"]
    },
    {
      "matches": ["https://myfreemp3juices.cc/*","https://notube.io/*"],
      "js": ["downloader.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/download.png",
        "assets/download_grey.png",
        "assets/download.webp",
        "assets/ext-icon.png"
      ],
      "matches": ["https://*.youtube.com/*", "https://myfreemp3juices.cc/*", "https://notube.io/*"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    },
    "default_title": "Save current youtube url",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
